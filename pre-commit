#!/bin/bash
# Pre-commit hook for Vult project
# Install: cp pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "Running pre-commit checks..."

# Check formatting
echo "  Checking formatting..."
cargo fmt --check
if [ $? -ne 0 ]; then
    echo "ERROR: Code is not formatted. Run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy
echo "  Running clippy..."
cargo clippy --lib --features gui -- -D warnings
if [ $? -ne 0 ]; then
    echo "ERROR: Clippy found issues. Fix them before committing."
    exit 1
fi

# Run tests (optional, can be slow)
# Uncomment to enable test checking on commit
# echo "  Running tests..."
# cargo test --lib

echo "All pre-commit checks passed!"
